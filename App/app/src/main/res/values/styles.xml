<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="header">
        <item name="android:textColor">@color/creamPalette</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="subHeader">
        <item name="android:textColor">@color/creamPalette</item>
        <item name="android:textSize">@dimen/subHeaderTextSize</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="body">
        <item name="android:textColor">@color/creamPalette</item>
        <item name="android:textSize">@dimen/bodyTextSize</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="button_dark">
        <item name="android:background">@drawable/button_dark</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
        <item name="android:textColor">@color/orangePalette</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_light">
        <item name="android:background">@drawable/button_light</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
        <item name="android:textColor">@color/accentPalette</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="edit_text">
        <item name="android:textSize">@dimen/bodyTextSize</item>
        <item name="android:textColor">@color/orangePalette</item>
        <item name="android:textColorHint">@color/creamPalette</item>
        <item name="android:backgroundTint">@color/orangePalette</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>