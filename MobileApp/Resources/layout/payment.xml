<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/accentPalette"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    tools:gridSpec="1|8|#0093eeff|K:#ee8700ff:16,l:72,l:16,r|S:#83ee00ff:16,0,l:16,56,l:16,0,r">

    <TextView
        style="@style/header"
        android:layout_width="match_parent"
        android:layout_height="52.5dp"
        android:gravity="center"
        android:textSize="30sp"
        android:text="Pago de Vuelos"
        android:textColor="@color/orangePalette"
        android:id="@+id/textView1"
        android:layout_marginTop="30dp" />

    <TextView
        style="@style/header"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:translationY="70dp"
        android:translationX="20dp"
        android:textSize="20sp"
        android:text="@string/name"
        android:textColor="@color/creamPalette"/>

    <EditText
        style="@style/edit_text"
        android:id="@+id/textCardName"
        android:translationY="40dp"
        android:translationX="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:textSize="20sp"
        android:textColor="@color/orangePalette"
        android:inputType="text" />

    <TextView
        style="@style/header"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:translationY="70dp"
        android:translationX="20dp"
        android:textSize="20sp"
        android:text="@string/card_num"
        android:textColor="@color/creamPalette"
        android:inputType="number"/>

    <EditText
        style="@style/edit_text"
        android:id="@+id/textNumCard"
        android:translationY="40dp"
        android:translationX="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:textSize="20sp"
        android:inputType="number" />

    <TextView
        style="@style/header"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:translationY="70dp"
        android:translationX="20dp"
        android:textSize="20sp"
        android:text="@string/ccv"
        android:textColor="@color/creamPalette"/>

    <EditText
        style="@style/edit_text"
        android:id="@+id/textCCV"
        android:translationY="50dp"
        android:translationX="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:textSize="20sp"
        android:inputType="numberPassword" />

    <TextView
        style="@style/header"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:translationY="70dp"
        android:translationX="20dp"
        android:textSize="20sp"
        android:text="@string/expires"
        android:textColor="@color/creamPalette"/>

    <EditText
        style="@style/edit_text"
        android:id="@+id/textDate"
        android:translationY="60dp"
        android:translationX="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:textSize="20sp"
        android:autofillHints="@string/password"
        android:inputType="date" />

    <android.widget.Button
        android:id="@+id/btnPayment"
        style="@style/button_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationY="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="@string/pay"
        android:textAllCaps="false" />

</LinearLayout>

